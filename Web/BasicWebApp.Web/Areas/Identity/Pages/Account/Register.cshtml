<h1 class="text-center mt-2">@ViewData["Title"] </h1>
<hr class="bg-primary w-75">
<form class="mx-auto w-50" method="post">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <div class="label-holder textCol d-flex justify-content-center">
            <label asp-for="Input.UserName" class="h4 mb-2 text-white"></label>
        </div>
        <input type="text" class="form-control" asp-for="Input.UserName">
        <span asp-validation-for="Input.UserName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <div class="label-holder textCol d-flex justify-content-center">
            <label asp-for="Input.Email" class="h4 mb-2 text-white"></label>
        </div>
        <input type="text" class="form-control" asp-for="Input.Email">
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <div class="label-holder textCol d-flex justify-content-center">
            <label asp-for="Input.Password" class="h4 mb-2 text-white"></label>
        </div>
        <input type="text" class="form-control" asp-for="Input.Password">
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <div class="label-holder textCol d-flex justify-content-center">
            <label asp-for="Input.ConfirmPassword" class="h4 mb-2 text-white"></label>
        </div>
        <input type="text" class="form-control" asp-for="Input.ConfirmPassword">
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="button-holder d-flex justify-content-center">
        <button type="submit" class="btn btn-block btn-primary text-white mb-3" value="Register">Register</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
