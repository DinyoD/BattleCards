@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<header>
    <h1 class="text-center mt-2">@ViewData["Title"]</h1>
    <hr class="bg-primary w-75">
    @{
        if (User.Identity.IsAuthenticated)
        {
            <form class="mx-auto w-50" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="btn btn-block btn-primary text-white mb-3">Click here to Logout</button>
            </form>
        }
        else
        {
            <p>You have successfully logged out of the application.</p>
        }
    }
</header>